<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" spacing="10" xmlns:fx="http://javafx.com/fxml">
    <TextField fx:id="display" editable="false" prefWidth="200" />

    <GridPane hgap="10" vgap="10" alignment="center">
        <Button text="7" fx:id="btn7" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Button text="8" fx:id="btn8" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Button text="9" fx:id="btn9" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <Button text="*" fx:id="btnMul" GridPane.columnIndex="3" GridPane.rowIndex="0" />
        <Button text="4" fx:id="btn4" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Button text="5" fx:id="btn5" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button text="6" fx:id="btn6" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <Button text="/" fx:id="btnDiv" GridPane.columnIndex="3" GridPane.rowIndex="1" />
        <Button text="1" fx:id="btn1" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Button text="2" fx:id="btn2" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button text="3" fx:id="btn3" GridPane.columnIndex="2" GridPane.rowIndex="2" />
        <Button text="-" fx:id="btnSub" GridPane.columnIndex="3" GridPane.rowIndex="2" />
        <Button text="0" fx:id="btn0" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Button text="." fx:id="btnDot" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Button text="=" fx:id="btnEqual" GridPane.columnIndex="2" GridPane.rowIndex="3" />
        <Button text="+" fx:id="btnAdd" GridPane.columnIndex="3" GridPane.rowIndex="3" />
    </GridPane>
</VBox>
